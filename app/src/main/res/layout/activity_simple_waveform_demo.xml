<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SimpleWaveformDemo"
    android:gravity="center_horizontal">

    <maxproj.com.simplewaveform.SimpleWaveform
        android:id="@+id/simplewaveform"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:background="@color/Blue"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/button_switch_simple_demos"
        android:layout_margin="10dp"
        android:text="switch simple demo"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_switch_advance_demos"
        android:layout_margin="10dp"
        android:text="switch advanced demo"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
</LinearLayout>
